{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "LLVM",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#decorators"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "storage.type.function.llvm",
					"match": "\\b(define)\\b"
				},
        {
					"name": "storage.type.function.llvm",
					"match": "\\b(asm)\\b"
				},
        {
					"name": "storage.type.function.llvm",
					"match": "\\b(module)\\b"
				},
        {
					"name": "storage.type.function.llvm",
					"match": "\\b(declare)\\b"
				},
        {
					"name": "storage.type.function.llvm",
					"match": "\\b(type)\\b"
				},{
          "name": "storage.type.function.llvm",
          "match": "\\b(target)\\b"
        },{
          "name": "storage.type.function.llvm",
          "match": "\\b(comdat)\\b"
        }, {
          "name": "storage.type.function.llvm",
          "match": "\\b(attributes)\\b"
        }, {
          "name": "storage.type.function.llvm",
          "match": "\\b(uselistorder)\\b"
        }, {
          "name": "storage.type.function.llvm",
          "match": "\\b(uselistorder_bb)\\b"
        }, {
          "name": "storage.type.function.llvm",
          "match": "\\b(label)\\b"
        },{
          "name": "storage.type.function.llvm",
          "match": "\\b(constant)\\b"
        },{
          "name": "storage.type.function.llvm",
          "match": "\\b(global)\\b"
        }
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.llvm",
					"match": ";.*$"
				}
			]
		}
	},
	"scopeName": "source.ll"
}